<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
	package="com.liihuu.kline">

	<application
		android:allowBackup="false"
		android:icon="@mipmap/ic_launcher"
		android:label="@string/app_name"
		android:supportsRtl="true"
		android:theme="@style/AppTheme.NoActionBar">
		<activity
			android:name="com.app.kline.MainActivity"
			android:label="@string/app_name">
			<intent-filter>
				<action android:name="android.intent.action.MAIN" />
				<action android:name="android.intent.action.VIEW" />

				<category android:name="android.intent.category.LAUNCHER" />
			</intent-filter>
		</activity>
		<activity
			android:name="com.app.kline.BasicKLineActivity"
			android:label="@string/title_activity_basic"/>
		<activity
			android:name="com.app.kline.StyleSettingActivity"
			android:label="@string/title_activity_style_setting"/>
		<activity
			android:name="com.app.kline.DrawPriceMarkActivity"
			android:label="@string/title_activity_draw_price_mark"/>
		<activity
			android:name="com.app.kline.IndicatorSettingActivity"
			android:label="@string/title_activity_indicator_setting"/>
		<activity
			android:name="com.app.kline.CustomIndicatorActivity"
			android:label="@string/title_activity_custom_indicator"/>
		<activity
			android:name="com.app.kline.DrawTooltipGeneralDataActivity"
			android:label="@string/title_activity_draw_tooltip_general_data"/>
		<activity
			android:name="com.app.kline.CustomTooltipGeneralDataActivity"
			android:label="@string/title_activity_custom_tooltip_general_data"/>
		<activity
			android:name="com.app.kline.ValueFormatActivity"
			android:label="@string/title_activity_value_format"/>
		<activity
			android:name="com.app.kline.SegmentLoadDataActivity"
			android:label="@string/title_activity_segment_load_data"/>
		<activity
			android:name="com.app.kline.SegmentLoadDataWithAnimActivity"
			android:label="@string/title_activity_segment_load_data_with_loading"/>
		<activity
			android:name="com.app.kline.FillDataActivity"
			android:label="@string/title_activity_auto_fill_data"/>

		<activity
			android:name="com.app.kline.ScrollingActivity"
			android:label="@string/title_activity_scrolling"/>
	</application>

</manifest>